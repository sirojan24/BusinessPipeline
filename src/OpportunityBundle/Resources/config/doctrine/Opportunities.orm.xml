    <field name="personname" type="string" column="personname" length="50" nullable="false"/>
    <field name="username" type="string" column="username" length="50" nullable="false"/>
    <field name="ownedcompany" type="string" column="ownedcompany" length="50" nullable="false"/>
    <field name="organizationname" type="string" column="organizationname" length="50" nullable="true"/>
    <field name="projectedrevenue" type="string" column="projectedrevenue" length="50" nullable="false"/>
    <field name="accounttype" type="string" column="accounttype" length="50" nullable="false"/>
