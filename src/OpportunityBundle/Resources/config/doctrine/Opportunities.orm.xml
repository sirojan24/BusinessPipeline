    <field name="closeddate" type="string" column="closeddate" length="50" nullable="false"/>
    <field name="notes" type="string" column="notes" length="500" nullable="true"/>
    <field name="visibility" type="string" column="visibility" length="50" nullable="false"/>
    <field name="forecast" type="string" column="forecast" length="50" nullable="false"/>
    <field name="sharing" type="string" column="sharing" length="1000" nullable="false"/>
    <field name="status" type="string" column="status" length="50" nullable="false"/>
    <field name="revenue" type="string" column="revenue" length="50" nullable="true"/>
    <field name="reason" type="string" column="reason" length="500" nullable="true"/>   
     <field name="userrevenue" type="string" column="userrevenue" length="50" nullable="true"/>
     <field name="contactid" type="integer" column="contactid" length="50" nullable="false"/>
     <field name="wonnotes" type="string" column="wonnotes" length="500" nullable="true"/>
     <field name="tags" type="string" column="tags" length="1000" nullable="true"/>   
